<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_band_dark</item>
        <item name="colorPrimaryDark">@color/blue_band_dark2</item>
        <item name="colorAccent">@color/blue_band_dark2</item>
        <item name="android:statusBarColor">@color/blue_band_dark2</item>
        <item name="android:colorControlHighlight">@color/blue_band_dark3</item>
    </style>

    <style name="style_setting_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/blue_band_dark</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">10.0dip</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="form_edit_view">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

</resources>
