<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pump.ia.fragment.form.share.BankBusinessFragment">

    <LinearLayout
        android:orientation="vertical"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="3dp"
            android:elevation="6dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/blue_band_light"
                android:text="存款"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/gray_light"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/blue_band_dark3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="51dp" >

                <TextView
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="@color/dark"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="金额" />

                <View
                    android:background="@color/gray_light"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="@color/dark"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="办理时间" />

                <View
                    android:background="@color/gray_light"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="@color/dark"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="到期时间" />

                <View
                    android:background="@color/gray_light"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_add_bank_business_deposit"
                    android:clickable="true"
                    android:text=" + "
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/blue_band_dark3"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/gray_light"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_bank_business_deposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <View
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_margin="3dp"
            android:elevation="6dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/blue_band_light"
                android:text="贷款"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/blue_band_dark3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="51dp" >

                <TextView
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="@color/dark"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="金额" />

                <View
                    android:background="@color/gray_light"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="@color/dark"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="办理时间" />

                <View
                    android:background="@color/gray_light"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="@color/dark"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="到期时间" />

                <View
                    android:background="@color/gray_light"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_add_bank_business_loan"
                    android:clickable="true"
                    android:text=" + "
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/blue_band_dark3"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/gray_light"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_bank_business_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
