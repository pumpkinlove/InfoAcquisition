<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:layout_weight="3"
                android:text="姓名"
                android:textColor="@color/blue_band_dark2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true" />
            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <EditText
                android:background="@null"
                android:hint="客户姓名"
                android:textColorHint="@color/gray_light"
                android:gravity="center"
                android:textColor="@color/dark"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:fitsSystemWindows="true"
                android:longClickable="true"
                android:id="@+id/f_family_name" />

            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="3"
                android:text="关系"
                android:textColor="@color/blue_band_dark2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true" />
            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <Spinner
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/dark"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:fitsSystemWindows="true"
                android:longClickable="true"
                android:id="@+id/f_family_relationship" />

        </LinearLayout>

        <View
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:layout_weight="3"
                android:text="职业"
                android:textColor="@color/blue_band_dark2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true" />
            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <EditText
                android:background="@null"
                android:hint="民族"
                android:textColorHint="@color/gray_light"
                android:gravity="center"
                android:textColor="@color/dark"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:fitsSystemWindows="true"
                android:longClickable="true"
                android:id="@+id/f_family_career" />

            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="3"
                android:text="年收入"
                android:textColor="@color/blue_band_dark2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true" />
            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <EditText
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/dark"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/f_family_annual_income" />

        </LinearLayout>

        <View
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:layout_weight="3"
                android:text="婚姻状况"
                android:textColor="@color/blue_band_dark2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true" />
            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <Spinner
                android:paddingLeft="100dp"
                android:gravity="center"
                android:textColor="@color/dark"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:fitsSystemWindows="true"
                android:longClickable="true"
                android:id="@+id/f_family_marry_state" />

            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="3"
                android:text="联系方式"
                android:textColor="@color/blue_band_dark2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true" />
            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <EditText
                android:background="@null"
                android:hint="联系方式"
                android:textColorHint="@color/gray_light"
                android:gravity="center"
                android:textColor="@color/dark"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:fitsSystemWindows="true"
                android:longClickable="true"
                android:id="@+id/f_family_mobile" />

        </LinearLayout>

        <View
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:layout_weight="3"
                android:text="证件号码"
                android:textColor="@color/blue_band_dark2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true" />
            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <EditText
                android:background="@null"
                android:hint="证件号码"
                android:textColorHint="@color/gray_light"
                android:gravity="center"
                android:textColor="@color/dark"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:fitsSystemWindows="true"
                android:longClickable="true"
                android:id="@+id/f_family_certificate" />

            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:text="保存"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/blue_band_dark"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/tv_save_family_member" />

            <View
                android:background="@color/gray_light"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:text="删除"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/red"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/tv_del_family_member" />
        </LinearLayout>

        <View
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
</LinearLayout>