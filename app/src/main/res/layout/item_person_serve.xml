<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_person"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/ps_name"
            android:textColorHint="@color/blue_band_dark2"
            android:textColor="@color/blue_band_dark2"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:background="@color/gray_light"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1.2"
            android:textColorHint="@color/blue_band_dark2"
            android:textColor="@color/blue_band_dark2"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ps_mobile" />


        <View
            android:background="@color/gray_light"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/ps_times"
            android:textColorHint="@color/blue_band_dark2"
            android:textColor="@color/blue_band_dark2"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"  />

        <View
            android:background="@color/gray_light"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/ps_last_serve"
            android:textColorHint="@color/blue_band_dark2"
            android:textColor="@color/blue_band_dark2"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"  />

        <View
            android:background="@color/gray_light"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/ps_follow"
            android:textColorHint="@color/blue_band_dark2"
            android:textColor="@color/blue_band_dark2"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"  />

    </LinearLayout>
    <View
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>